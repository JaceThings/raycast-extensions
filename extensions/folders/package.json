                }
            ]
        },
        {
            "name": "folderContentsViewType",
            "type": "dropdown",
            "required": true,
            "title": "ðŸ“‹ View Type",
            "description": "How to display items when viewing folder contents",
            "default": "list",
            "data": [
                {
                    "title": "List View",
                    "value": "list"
                },
                {
                    "title": "Grid View",
                    "value": "grid"
                }
            ]
        },
        {
            "name": "showPreviewPane",
            "type": "checkbox",
            "required": true,
            "title": "Preview Pane",
            "description": "Show folder contents in a preview pane beside the folder list",
            "label": "Show Preview Pane",
            "default": false
        },
        {
            "name": "gridSeparateSections",
            "type": "checkbox",
            "required": true,
            "title": "Folder Contents",
            "description": "Group apps, websites, and folders into separate sections",
            "label": "Separate Apps, Websites & Folders",
            "default": true
        },
        {
            "name": "defaultFolderColor",
            "type": "textfield",
            "required": false,
            "title": "Default Folder Color",
            "description": "CSS color name or hex code for new folders",
            "placeholder": "coral"
        }
    ],
    "commands": [
        {
            "name": "index",
            "title": "Folders",
            "subtitle": "Folders",
            "description": "Search and open your custom folders",
            "mode": "view",
            "keywords": [
                "folder",
                "folders",
                "organize"
            ]
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.69.0",
