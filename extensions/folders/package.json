{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "folders",
    "title": "Folders",
    "description": "Organize applications, websites, and folders in custom folders accessible from Raycast",
    "icon": "icon.png",
    "author": "Jace",
    "categories": [
        "Productivity",
        "System"
    ],
    "license": "MIT",
